        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Margin="10,10,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Pendientes"
               FontSize="20"
               FontWeight="Bold" />
        <Rectangle Width="49"
                   Height="39"
                   Margin="10,55,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Fill="Gray"
                   Stroke="Black" />
        <Label Margin="86,55,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Miércoles siguiente"
               FontSize="18" />
        <Rectangle Width="49"
                   Height="39"
                   Margin="10,110,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Fill="Red"
                   Stroke="Black" />
        <Label Margin="86,110,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Urgente"
               FontSize="18" />
