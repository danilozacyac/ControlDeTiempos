                   Height="39"
                   Margin="10,268,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Fill="Purple"
                   Stroke="Black" />
        <Label Margin="86,268,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Otro"
               FontSize="18" />
        <Label Grid.Column="1"
               Margin="10,10,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Entregadas"
               FontSize="20"
               FontWeight="Bold" />
        <Rectangle Grid.Column="1"
                   Width="49"
                   Height="39"
                   Margin="19,55,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Fill="LightGreen"
                   Stroke="Black" />
        <Label Grid.Column="1"
               Margin="95,55,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Entregada a tiempo"
               FontSize="18" />
        <Rectangle Grid.Column="1"
                   Width="49"
                   Height="39"
                   Margin="19,110,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Fill="LightPink"
                   Stroke="Black" />
        <Label Grid.Column="1"
               Margin="95,110,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Entregada con retrazo"
               FontSize="18" />
    </Grid>
</telerik:RadWindow>