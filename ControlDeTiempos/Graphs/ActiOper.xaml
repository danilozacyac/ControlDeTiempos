<telerik:RadWindow x:Class="ControlDeTiempos.Graphs.ActiOper"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Header="ActiOper" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <telerik:RadComboBox x:Name="Cbxoperativos" HorizontalAlignment="Left" Margin="19,20,0,0" VerticalAlignment="Top" Width="211"/>
        <telerik:RadPieChart x:Name="ActsOper" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch">
            <telerik:PieSeries>
                <telerik:PieSeries.DataPoints>
                    <telerik:PieDataPoint IsSelected="False" Label="60 %" OffsetFromCenter="0" Value="9"/>
                    <telerik:PieDataPoint IsSelected="False" Label="20 %" OffsetFromCenter="0" Value="3"/>
                    <telerik:PieDataPoint IsSelected="False" Label="20 %" OffsetFromCenter="0" Value="3"/>
                </telerik:PieSeries.DataPoints>
            </telerik:PieSeries>
        </telerik:RadPieChart>
    </Grid>
</telerik:RadWindow>